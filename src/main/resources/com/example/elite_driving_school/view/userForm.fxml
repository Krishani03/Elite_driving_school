<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.elite_driving_school.controller.UserFormController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="User Id" />

        <Label layoutX="20.0" layoutY="60.0" text="Username" />
        <TextField fx:id="txtUsername" layoutX="120.0" layoutY="60.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="100.0" text="Password" />
        <PasswordField fx:id="txtPassword" layoutX="120.0" layoutY="100.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="140.0" text="Role" />
        <ComboBox fx:id="cmbRole" layoutX="120.0" layoutY="140.0" prefWidth="200.0" />

        <CheckBox fx:id="chkActive" layoutX="120.0" layoutY="180.0" selected="true" text="Active" />

        <Button fx:id="btnAdd" layoutX="50.0" layoutY="220.0" onAction="#btnAddOnAction" prefHeight="25.0" prefWidth="63.0" style="-fx-background-color: #1E4FE3;" text="Add" />
        <Button fx:id="btnUpdate" layoutX="150.0" layoutY="220.0" onAction="#btnUpdateOnAction" style="-fx-background-color: #27E678;" text="Update" />
        <Button fx:id="btnDelete" layoutX="270.0" layoutY="220.0" onAction="#btnDeleteOnAction" prefHeight="25.0" prefWidth="55.0" style="-fx-background-color: #E62734;" text="Delete" />
        <Button fx:id="btnClear" layoutX="390.0" layoutY="220.0" onAction="#btnClearOnAction" prefHeight="25.0" prefWidth="55.0" style="-fx-background-color: #E68027;" text="Clear" />

        <TableView fx:id="tblUsers" layoutX="20.0" layoutY="270.0" onMouseClicked="#onClickTable" prefHeight="160.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="Id" />
                <TableColumn fx:id="colUsername" prefWidth="150.0" text="Username" />
                <TableColumn fx:id="colRole" prefWidth="100.0" text="Role" />
                <TableColumn fx:id="colActive" prefWidth="80.0" text="Active" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
      <TextField fx:id="txtUserId" layoutX="120.0" layoutY="16.0" prefWidth="200.0" />
    </children>
</AnchorPane>
